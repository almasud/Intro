<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.github.almasud.augmented_learn.view.activity.LearnActivity">

    <include
        android:id="@+id/toolbar_learn"
        layout="@layout/toolbar"/>

    <RelativeLayout
        android:id="@+id/wrapperLearn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerLearn"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/buttonPrevLearn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_arrow_back_ios"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerVertical="true"
            app:tint="@color/colorPrimary"
            android:layout_alignParentStart="true"
            tools:ignore="ContentDescription,PrivateResource,RelativeOverlap" />

        <ImageView
            android:id="@+id/buttonNextLearn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_arrow_forward_ios"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerVertical="true"
            app:tint="@color/colorPrimary"
            android:layout_alignParentEnd="true"
            tools:ignore="ContentDescription,PrivateResource,RelativeOverlap" />

    </RelativeLayout>

</LinearLayout>