<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.com.almasud.Augmented_School.view.activity.ScanActivity">

    <include
        android:id="@+id/toolbarScan"
        layout="@layout/toolbar"/>

    <FrameLayout
        android:id="@+id/frameScan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarScan">


        <fragment
            android:name="com.github.com.almasud.Augmented_School.view.fragment.ScanArFragment"
            android:id="@+id/ArFragmentScan"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/ivFitToScan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/fit_to_scan"
            tools:ignore="ContentDescription" />

    </FrameLayout>

</RelativeLayout>